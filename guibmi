    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // EXIT BMI
        System.exit(0);
    }                                        

    private void jButton1MouseClicked(java.awt.event.MouseEvent evt) {                                      
        // HITUNG BMI
        bmi.setTinggi(Double.parseDouble(tinggi.getText()));
        bmi.setberat(Double.parseDouble(berat.getText()));
        bmi.hasilinf();
        JOptionPane.showMessageDialog(this, bmi.getInf());
    }                                     

    private void jButton2MouseClicked(java.awt.event.MouseEvent evt) {                                      
        // RESET BMI
        tinggi.setText("");
        berat.setText("");
    }                                     

