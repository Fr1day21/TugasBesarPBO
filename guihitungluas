    private void inputsisiActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void jButton1MouseClicked(java.awt.event.MouseEvent evt) {                                      
        //HITUNG PERSEGI
        luas.setSisi(Double.parseDouble(inputsisi.getText()));
        luas.hasilPer();
        JOptionPane.showMessageDialog(this, luas.getInfo());
    }                                     

    private void jButton2MouseClicked(java.awt.event.MouseEvent evt) {                                      
        //RESET PERSGI
       inputsisi.setText("");
    }                                     

    private void jButton5MouseClicked(java.awt.event.MouseEvent evt) {                                      
        //HITUNG LINGKARAN
        luas.setJari(Double.parseDouble(inputling.getText()));
        luas.hasilL();
        JOptionPane.showMessageDialog(this, luas.getInfo());
    }                                     

    private void jButton6MouseClicked(java.awt.event.MouseEvent evt) {                                      
        // RESET LINGKARAN
        inputling.setText("");
    }                                     

    private void jButton3MouseClicked(java.awt.event.MouseEvent evt) {                                      
        // HITUNG SEGITIGA 
        luas.setAlas(Double.parseDouble(inputalas.getText()));
        luas.setTinggi(Double.parseDouble(inputtinggi.getText()));
        luas.hasilS();
        JOptionPane.showMessageDialog(this, luas.getInfo());
    }                                     

    private void jButton4MouseClicked(java.awt.event.MouseEvent evt) {                                      
        // RESET SEGITIGA
        inputalas.setText("");
        inputtinggi.setText("");
    }                                     

    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // EXIT PERSEGI
        System.exit(0);
    }                                        

    private void jButton8ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //EXIT LINGKARAN
        System.exit(0);
    }                                        

    private void jButton9ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //EXIT SEGITIGA
        System.exit(0);
    }                                        

